<p id="notice"><%= notice %></p>

<h1>Listing Pins</h1>

<table>
  <thead>
    <tr>
      <th>Description String</th>
      <th>User</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
    <% pin.user.email if pin.user %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= pin.user.email if pin.user %></td>
        <td><%= pin.string %></td>
        <td><%= link_to 'Show', pin, class: "btn btn-default btn-sm" %></td>
      <% if pin.user == current_user %>
        <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Destroy', pin, class: "btn btn-primary btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Pin', new_pin_path, class: "btn btn-default btn-sm" %>
<% end %>